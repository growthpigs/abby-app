{
  "expo": {
    "name": "Abby",
    "slug": "abby-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.abby.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Abby needs your microphone to have a conversation with you.",
        "UIBackgroundModes": [
          "audio"
        ]
      }
    },
    "plugins": [
      "@livekit/react-native-expo-plugin",
      "@config-plugins/react-native-webrtc",
      "expo-font"
    ]
  }
}
